#Fedora/42 with build tools

#To build on AMD64: docker build -f fedora42.docker -t amd64/fedora42 .

#To build on ARM64: docker build -f fedora42.docker -t arm64/fedora42 .

#To use: cd repo ; docker-amd64.sh fedora42 latest

#see https://docs.docker.com/reference/dockerfile/

FROM fedora:42

WORKDIR /opt

#install JF deps

COPY deps.sh /opt

RUN bash /opt/deps.sh

#install Linux native deps

COPY native/linux/deps.sh /opt

RUN bash /opt/deps.sh

#cleanup

RUN rm /opt/deps.sh
