<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:fire="http://schemas.microsoft.com/wix/FirewallExtension">
  <Product Id="*" UpgradeCode="{E6BC4AC0-4F65-49AE-829A-6466561364EE}" Version="0.2" Language="1033" Name="jfSSH" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine" Platform="x64"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />
    <UIRef Id="WixUI_Minimal" />
    <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."/>

    <Icon Id="icon.ico" SourceFile="jfssh.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfssh"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfSSH"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{95722B2F-DAE7-4C05-B88D-D44850ECEDED}" Win64="yes">
        <File Id="jfsshsvc.exe" Source="jfsshsvc.exe" KeyPath="yes">
          <fire:FirewallException
            Id="FirewallRule22"
            Name="jfSSH"
            Protocol="tcp"
            Port="22"
            Scope="any"
            IgnoreFailure="yes"
            Profile="all" />
        </File>
        <File Id="jfssh.exe" Source="jfssh.exe"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="sshdcore.jar" Source="sshd-core.jar"/>
        <File Id="sshdcommon.jar" Source="sshd-common.jar"/>
        <File Id="sshdsftp.jar" Source="sshd-sftp.jar"/>
        <File Id="sshdscp.jar" Source="sshd-scp.jar"/>
        <File Id="slf4japi.jar" Source="slf4j-api.jar"/>
        <File Id="slf4jlog4j12.jar" Source="slf4j-log4j12.jar"/>
        <File Id="log4j1.2api.jar" Source="log4j-1.2-api.jar"/>
        <File Id="log4japi.jar" Source="log4j-api.jar"/>
        <File Id="log4jcore.jar" Source="log4j-core.jar"/>
        <ServiceInstall Id="ServiceInstaller"
          Type="ownProcess"
          Name="jfSSH"
          DisplayName="jfSSH"
          Description="jf SSH Server"
          Start="auto"
          ErrorControl="normal" />
        <ServiceControl Id="StartService" Start="install" Stop="both" Remove="uninstall" Name="jfSSH" Wait="yes" />
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{D88F2BF2-FB0C-488E-8C90-94EAB521386C}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfSSH" Description="Java SSH Server" Target="[APPLICATIONROOTDIRECTORY]jfssh.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfSSH" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentGroupRef Id="JRE" />
    </Feature>
  </Product>
</Wix>
