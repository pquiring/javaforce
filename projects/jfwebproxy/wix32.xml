<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="{359C49D0-D7BD-4838-902D-135A85A541E5}" Version="1.5.0" Language="1033" Name="jfWebProxy" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />

    <Icon Id="icon.ico" SourceFile="jfwebproxy.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfwebproxy"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfWebProxy"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{48D95C61-DDF4-425D-86DB-8A4F470EC5E4}">
        <File Id="proxy.jar" Source="proxy.jar" KeyPath="yes"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="jfwebproxy.exe" Source="jfwebproxy.exe"/>
        <File Id="jfwebproxy.cfg" Source="jfwebproxy.cfg"/>
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{FEE7F3FC-0A6F-4D00-BD00-3A85E786658B}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfWebProxy" Description="jfWebProxy" Target="[APPLICATIONROOTDIRECTORY]jfwebproxy.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfWebProxy" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
  </Product>
</Wix>
