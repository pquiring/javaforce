<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="{04CA0F82-B57F-4482-9A3A-470259C1BFE3}" Version="0.3" Language="1033" Name="jfProjector" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine" Platform="x64"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />
    <UIRef Id="WixUI_Minimal" />
    <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."/>

    <Icon Id="icon.ico" SourceFile="jfprojector.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfprojector"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfProjector"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{1ACD9E46-28DE-4177-9648-730288BFBA22}" Win64="yes">
        <File Id="jfprojector.jar" Source="jfprojector.jar" KeyPath="yes"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="jfprojector.exe" Source="jfprojector.exe"/>
        <File Id="jfprojectorsvr.exe" Source="jfprojectorsvr.exe"/>
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{C7F0A3E2-42D7-4231-9EA4-998741D7FBCE}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfProjector" Description="Projector" Target="[APPLICATIONROOTDIRECTORY]jfprojector.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfProjector" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
      <Component Id="ApplicationShortcut2" Guid="{A0C16BBC-A4F3-44FF-BB5A-05B11A357DF2}">
        <Shortcut Id="ApplicationStartMenuShortcut2" Name="jfProjector Server" Description="Projector Server" Target="[APPLICATIONROOTDIRECTORY]jfprojectorsvr.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfProjector" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="ApplicationShortcut2" />
      <ComponentGroupRef Id="JRE" />
      <ComponentGroupRef Id="FFMPEG" />
    </Feature>
  </Product>
</Wix>
