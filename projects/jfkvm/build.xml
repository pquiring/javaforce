<project name="jfkvm" default="jar" basedir=".">
  <description>kvm</description>
  <!-- set global properties for this build -->
  <property name="app" value="jfkvm"/>
  <property name="apptype" value="service"/>
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="home" location="../.."/>
  <property name="classpath" location="javaforce.jar"/>
  <property name="jre" location="${home}/jre_base"/>
  <property name="version" value="7.1"/>

  <property name="debian.depends" value="jfutils, libvirt-dev  ,libvirt-daemon-system,openvswitch-switch,bridge-utils,nfs-common,open-iscsi           ,gfs2-utils,ocfs2-tools,glusterfs-server, cephadm, ceph-common, docker.io"/>
  <property name="fedora.depends" value="jfutils, libvirt-devel,libvirt-daemon       ,openvswitch       ,bridge-utils,nfs-utils ,iscsi-initiator-utils,gfs2-utils,ocfs2-tools,glusterfs-server, cephadm, ceph-common, docker"/>
  <property name="arch.depends"   value="jfutils, libvirt                            ,openvswitch       ,bridge-utils,nfs-utils ,open-iscsi                                  ,glusterfs                             , docker"/>
    <!-- AUR gfs2-utils & ocfs2-tools support -->

  <import file="${home}/base.xml"/>

  <target name="depjars" depends="depnatives,jar-javaforce" description="jar">
  </target>

  <target name="compile" depends="depjars" description="compile the source">
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}"/>
    <javac srcdir="${src}" destdir="${build}" release="${java-version}" debug="true" includeantruntime="false">
      <classpath path="${classpath}"/>
    </javac>
  </target>

  <target name="jar" depends="compile" description="build jar file">
    <!-- Build jar file from class files -->
    <jar destfile="${app}.jar" includes="**/*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <fileset dir="src" includes="*.png"/>
      <manifest>
        <attribute name="Main-Class" value="KVMService"/>
      </manifest>
    </jar>
  </target>

  <!-- sudo ant install -->
  <target name="install" description="install files">
    <copy file="${app}.jar" todir="/usr/share/java"/>
    <copy file="${app}.service" todir="/lib/systemd/system"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="classes" includes="**/*.class"/>
    </delete>
  </target>
</project>
