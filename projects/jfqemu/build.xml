<project name="jfqemu" default="jar" basedir=".">
  <description>jfqemu</description>
  <!-- set global properties for this build -->
  <property name="app" value="jfqemu"/>
  <property name="home" location="../.."/>
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="classpath" location="javaforce.jar"/>
  <property name="version" value="0.2"/>

  <property name="debian.depends" value="qemu, jfvnc"/>
  <property name="fedora.depends" value="qemu, jfvnc"/>
  <property name="arch.depends" value="qemu, jfvnc"/>

  <import file="../../base.xml"/>

  <target name="depjars" depends="depnatives">
    <jar destfile="javaforce.jar">
      <zipfileset src="../../jars/javaforce.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfqemu.sourceforge.net"/>
      </manifest>
    </jar>
  </target>

  <target name="compile" depends="depjars" description="compile the source">
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}"/>
    <javac srcdir="${src}" destdir="${build}" target="${jdkver}" source="${jdkver}" debug="true" includeantruntime="false">
      <classpath path="${classpath}"/>
    </javac>
  </target>

  <target name="jar" depends="compile" description="build jar file">
    <!-- Build jar file from class files -->
    <jar destfile="jfqemu.jar" includes="**/*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <manifest>
        <attribute name="Main-Class" value="QEMUApp"/>
      </manifest>
    </jar>
  </target>

  <!-- sudo ant install -->
  <target name="install" description="install files">

    <copy file="jfqemu.jar" todir="/usr/share/java"/>
    <copy file="${app}.service" todir="/lib/systemd/system"/>
    <copy file="jfqemu.desktop" todir="/usr/share/applications"/>
    <copy file="jfqemu.png" todir="/usr/share/icons/hicolor/48x48/apps"/>
    <copy file="jfqemu.html" todir="/usr/share/jfhelp"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/*.jar"/>
    </delete>
  </target>
</project>
