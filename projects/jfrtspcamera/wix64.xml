<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" xmlns:fire="http://wixtoolset.org/schemas/v4/wxs/firewall" xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package UpgradeCode="{30DFAB08-2026-45F3-8002-D33AFA62CA5C}" Version="0.2" Language="1033" Name="jfRTSPCamera" Manufacturer="Peter Quiring" InstallerVersion="300">
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />
    <UIRef Id="WixUI_Minimal" />
    <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit." />

    <Icon Id="icon.ico" SourceFile="jfrtspcamera.ico" />
    <Property Id="ARPPRODUCTICON" Value="icon.ico" />

    <!-- Step 1: Define the directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfrtspcamera" />
    </StandardDirectory>
    <StandardDirectory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfRTSPCamera"/> -->
    </StandardDirectory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{EAC8282D-04A5-4F6D-9118-3C39DA260BF0}" Bitness="always64">
        <File Id="jfrtspcamera.exe" Source="jfrtspcamera.exe" KeyPath="yes">
          <fire:FirewallException Id="FirewallRule_RTSP" Name="jfRTSPCamera_RTSP" Protocol="tcp" Port="554" Scope="any" IgnoreFailure="yes" Profile="all" />
          <fire:FirewallException Id="FirewallRule_RTP" Name="jfRTSPCamera_RTP" Protocol="udp" Port="30000-50000" Scope="any" IgnoreFailure="yes" Profile="all" />
        </File>
        <File Id="javaforce.jar" Source="javaforce.jar" />
        <File Id="jfrtspcamera.jar" Source="jfrtspcamera.jar" />
        <ServiceInstall Id="ServiceInstaller" Type="ownProcess" Name="jfRTSPCamera" DisplayName="jfRTSPCamera" Description="jf RTSP Camera" Start="auto" ErrorControl="normal" />
        <ServiceControl Id="StartService" Start="install" Stop="both" Remove="uninstall" Name="jfRTSPCamera" Wait="yes" />
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <StandardDirectory Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{0A73BDA8-B29A-45B9-A0F7-BCD903419A4D}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfRTSPCamera" Description="RTSPCamera" Target="[APPLICATIONROOTDIRECTORY]jfrtspcamera.exe" WorkingDirectory="APPLICATIONROOTDIRECTORY" />
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfRTSPCamera" Name="installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </StandardDirectory>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentGroupRef Id="JRE" />
      <ComponentGroupRef Id="FFMPEG" />
    </Feature>

    </Package>
</Wix>
