<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:fire="http://schemas.microsoft.com/wix/FirewallExtension">
  <Product Id="*" UpgradeCode="{5EA6E3F7-F3BC-45C1-867A-2259484B2479}" Version="0.1" Language="1033" Name="jfSMTP" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine" Platform="x64"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />
    <UIRef Id="WixUI_Minimal" />
    <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."/>

    <Icon Id="icon.ico" SourceFile="jfsmtp.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfsmtp"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfSMTP"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{5F416CC0-CD6E-41F6-B049-DF5F47F156D2}" Win64="yes">
        <File Id="jfsmtpsvc.exe" Source="jfsmtpsvc.exe" KeyPath="yes">
          <fire:FirewallException
            Id="FirewallRule110"
            Name="jfSMTP"
            Protocol="tcp"
            Port="110"
            Scope="any"
            IgnoreFailure="yes"
            Profile="all" />
          <fire:FirewallException
            Id="FirewallRule995"
            Name="jfSMTP"
            Protocol="tcp"
            Port="995"
            Scope="any"
            IgnoreFailure="yes"
            Profile="all" />
        </File>
        <File Id="jfsmtp.exe" Source="jfsmtp.exe"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <ServiceInstall Id="ServiceInstaller"
          Type="ownProcess"
          Name="jfSMTP"
          DisplayName="jfSMTP"
          Description="jf SMTP Server"
          Start="auto"
          ErrorControl="normal" />
        <ServiceControl Id="StartService" Start="install" Stop="both" Remove="uninstall" Name="jfSMTP" Wait="yes" />
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{CD9CC532-A506-45FD-835E-E947471B8A00}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfSMTP" Description="Java SMTP Server" Target="[APPLICATIONROOTDIRECTORY]jfsmtp.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfSMTP" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentGroupRef Id="JRE" />
    </Feature>
  </Product>
</Wix>
