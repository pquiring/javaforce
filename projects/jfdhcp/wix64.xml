<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:fire="http://schemas.microsoft.com/wix/FirewallExtension">
  <Product Id="*" UpgradeCode="{0595AC71-0C0B-4F51-9AF6-1355755D944D}" Version="0.7" Language="1033" Name="jfDHCP" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine" Platform="x64"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />
    <UIRef Id="WixUI_Minimal" />
    <MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."/>

    <Icon Id="icon.ico" SourceFile="jfdhcp.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jfdhcp"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfDHCP"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{E6CA49CE-48B5-43CF-950D-49C9D9BA9C4F}" Win64="yes">
        <File Id="jfdhcpsvc.exe" Source="jfdhcpsvc.exe" KeyPath="yes">
          <fire:FirewallException
            Id="FirewallRule"
            Name="jfDHCP"
            Protocol="udp"
            Port="67"
            Scope="any"
            IgnoreFailure="yes"
            Profile="all" />
        </File>
        <File Id="jfdhcp.exe" Source="jfdhcp.exe"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <ServiceInstall Id="ServiceInstaller"
          Type="ownProcess"
          Name="jfDHCP"
          DisplayName="jfDHCP"
          Description="jf DHCP Server"
          Start="auto"
          ErrorControl="normal" />
        <ServiceControl Id="StartService" Start="install" Stop="both" Remove="uninstall" Name="jfDHCP" Wait="yes" />
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{9E1741B5-128F-47E9-A19A-2A0E30E09C8F}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfDHCP" Description="Java DHCP Server" Target="[APPLICATIONROOTDIRECTORY]jfdhcp.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfDHCP" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
  </Product>
</Wix>
