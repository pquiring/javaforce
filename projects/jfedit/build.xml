<project name="jfedit" default="jar" basedir=".">
  <description>jfedit</description>
  <!-- set global properties for this build -->
  <property name="app" value="jfedit"/>
  <property name="home" location="../.."/>
  <property name="jre" location="${home}/jre_base_desktop"/>
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="classpath" location="javaforce.jar"/>
  <property name="version" value="0.22"/>

  <import file="${home}/base.xml"/>

  <target name="depjars" depends="depnatives,jar-javaforce">
  </target>

  <target name="compile" depends="depjars" description="compile the source">
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}"/>
    <javac srcdir="${src}" destdir="${build}" release="${jdkver}" debug="true" includeantruntime="false">
      <classpath path="${classpath}"/>
    </javac>
  </target>

  <target name="jar" depends="compile" description="build jar file">
    <!-- Build jar file from class files -->
    <jar destfile="${app}.jar" includes="*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <manifest>
        <attribute name="Main-Class" value="JEdit"/>
      </manifest>
    </jar>
  </target>

  <!-- sudo ant install -->
  <target name="install" description="install files">

    <copy file="${app}.jar" todir="/usr/share/java"/>
    <copy file="${app}.desktop" todir="/usr/share/applications"/>
    <copy file="${app}.png" todir="/usr/share/icons/hicolor/48x48/apps"/>
    <copy file="${app}.html" todir="/usr/share/jfhelp"/>
  </target>

  <macrodef name="utilsmacro">
    <attribute name="app"/>
    <sequential>
      <copy file="${home}/native/win64c.exe" tofile="@{app}c.exe" overwrite="true"/>
      <java classpath="javaforce.jar" classname="javaforce.utils.WinPE" fork="true" jvm="${home}/bin/jfexec">
        <arg value="@{app}c.exe"/>
        <arg value="@{app}.cfg"/>
      </java>
    </sequential>
  </macrodef>

  <target name="console" depends="jar" description="build exe for utils">
    <utilsmacro app="jfedit"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/*.jar"/>
    </delete>
  </target>
</project>
